<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>sgp</display-name>
  <servlet>
    <servlet-name>ListerCollaborateursController</servlet-name>
    <servlet-class>dev.sgp.web.ListerCollaborateursController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListerCollaborateursController</servlet-name>
    <url-pattern>/collaborateurs/lister</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EditerCollaborateursController</servlet-name>
    <servlet-class>dev.sgp.web.EditerCollaborateursController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditerCollaborateursController</servlet-name>
    <url-pattern>/collaborateurs/editer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>NouveauCollaborateurController</servlet-name>
    <servlet-class>dev.sgp.web.NouveauCollaborateurController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NouveauCollaborateurController</servlet-name>
    <url-pattern>/collaborateurs/nouveau</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>FrequentationFilter</filter-name>
    <filter-class>dev.sgp.filter.FrequentationFilter</filter-class>
  </filter>
  
  <servlet>
    <servlet-name>VisiteWebController</servlet-name>
    <servlet-class>dev.sgp.web.VisiteWebController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VisiteWebController</servlet-name>
    <url-pattern>/collaborateurs/statistique</url-pattern>
  </servlet-mapping>
  
  <!-- Ici on dspecifie le chemin des fichier sur lequelle notre filtre va s'appliquer
  Vue qu'on a mis /* donc le filtre va s'appliquÃ© sur tout les fichiers (classe) de notre application -->
  <filter-mapping>
    <filter-name>FrequentationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>